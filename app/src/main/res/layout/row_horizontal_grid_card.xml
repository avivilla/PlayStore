<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_horizotal_grid_card_linear_layout1"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="24"
    android:padding="5dp"
    >
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        >
        <ImageView
            android:id="@+id/horizontal_card_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/cardbg"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="14"
        android:orientation="vertical">
        <TextView
            android:id="@+id/horizontal_card_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:lines="2"
            android:textColor="@color/black"
            android:text="Player Unknown BattleGround "
            android:autoSizeTextType="uniform"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeMinTextSize="2sp"
            android:autoSizeMaxTextSize="15sp"/>
        <TextView
            android:id="@+id/horizontal_card_size"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="6 MB"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:autoSizeTextType="uniform"
            />

    </LinearLayout>


</LinearLayout>